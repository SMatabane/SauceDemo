<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Sauce tests" parallel="tests" thread-count="3">


    <listeners>
        <listener class-name="com.prime.utilities.ListenersClass" />
    </listeners>

    <!-- Login Test Suite -->
    <test name="Login Tests">
        <classes>
            <class name="com.prime.testcases.LoginTest" />
        </classes>
    </test>

    <!-- Products -->
    <test name="Product Tests">
        <classes>
            <class name="com.prime.testcases.IndexTest" />
        </classes>
    </test>

    <!-- Cart Tests -->
    <test name="Cart Tests">
        <classes>
            <class name="com.prime.testcases.CartTest" />
        </classes>
    </test>

</suite>

